BootStrap: yum
MirrorURL: http://ftp.riken.jp/Linux/rocky/8/BaseOS/x86_64/os/
Include: yum

# If you want the updates (available at the bootstrap date) to be installed
# inside the container during the bootstrap instead of the General Availability
# point release (7.x) then uncomment the following line
#UpdateURL: http://mirror.centos.org/centos-%{OSVERSION}/%{OSVERSION}/updates/$basearch/

%runscript
    echo "This is what happens when you run the container..."

%post
    echo "Hello from inside the container"
    yum -y install httpd
    sed -i -e "s/^\(Listen\).*/\1 8000/" /etc/httpd/conf/httpd.conf

%startscript
httpd

# Usage
# create following directory
# $HOME/httpd
# $HOME/httpd/run
# $HOME/httpd/run/httpd
# $HOME/httpd/var
# $HOME/httpd/var/log
# $HOME/httpd/var/log/httpd
# $HOME/httpd/var/www
# $HOME/httpd/var/www/html

# create html document on DocumentRoot
# $HOME/httpd/var/www/html/index.html

# shell mode test:
# sudo singularity shell -B /home/sendai/httpd/var/log:/var/log -B /home/sendai/httpd/var/www:/var/www -B /home/sendai/httpd/run:/run rocky-httpd

# instance mode:
# if $HOME/httpd was used in  sudo singularity, remove all files except html document in DocumentRoot ($HOME/var/www/html/)
# (start) (not root user)
# singularity instance start -B /home/sendai/httpd/var/log:/var/log -B /home/sendai/httpd/var/www:/var/www -B /home/sendai/httpd/run:/run rocky-httpd httpd
# (stop) (not root user)
# singularity instance stop httpd
